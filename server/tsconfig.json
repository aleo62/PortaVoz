{
    "compilerOptions": {
        "target": "ES2020",
        "lib": ["ES2016"],
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "typeRoots": ["./src/utils/types", "./node_modules/@types"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
